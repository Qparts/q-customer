  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module q-rest-customer -->
  
  <dirname property="module.q-rest-customer.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.q-rest-customer" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.q-rest-customer" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.q-rest-customer" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.q-rest-customer" value="-encoding UTF-8 -source 11 -target 11 ${compiler.args}"/>
  
  <property name="q-rest-customer.output.dir" value="${module.q-rest-customer.basedir}/out/production/q-rest-customer"/>
  <property name="q-rest-customer.testoutput.dir" value="${module.q-rest-customer.basedir}/out/test/q-rest-customer"/>
  
  <path id="q-rest-customer.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="q-rest-customer.module.production.classpath">
    <path refid="${module.jdk.classpath.q-rest-customer}"/>
    <path refid="library.jboss_14.0.1.final.classpath"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/jackson-annotations-2.8.5.jar"/>
  </path>
  
  <path id="q-rest-customer.runtime.production.module.classpath">
    <pathelement location="${q-rest-customer.output.dir}"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/jackson-annotations-2.8.5.jar"/>
  </path>
  
  <path id="q-rest-customer.module.classpath">
    <path refid="${module.jdk.classpath.q-rest-customer}"/>
    <pathelement location="${q-rest-customer.output.dir}"/>
    <path refid="library.jboss_14.0.1.final.classpath"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/jackson-annotations-2.8.5.jar"/>
  </path>
  
  <path id="q-rest-customer.runtime.module.classpath">
    <pathelement location="${q-rest-customer.testoutput.dir}"/>
    <pathelement location="${q-rest-customer.output.dir}"/>
    <path refid="library.jboss_14.0.1.final.classpath"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/jackson-annotations-2.8.5.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.q-rest-customer">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.q-rest-customer">
    <patternset refid="excluded.from.module.q-rest-customer"/>
  </patternset>
  
  <path id="q-rest-customer.module.sourcepath">
    <dirset dir="${module.q-rest-customer.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.q-rest-customer" depends="compile.module.q-rest-customer.production,compile.module.q-rest-customer.tests" description="Compile module q-rest-customer"/>
  
  <target name="compile.module.q-rest-customer.production" depends="register.custom.compilers" description="Compile module q-rest-customer; production classes">
    <mkdir dir="${q-rest-customer.output.dir}"/>
    <javac2 destdir="${q-rest-customer.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.q-rest-customer}/javac">
      <compilerarg line="${compiler.args.q-rest-customer}"/>
      <bootclasspath refid="q-rest-customer.module.bootclasspath"/>
      <classpath refid="q-rest-customer.module.production.classpath"/>
      <src refid="q-rest-customer.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.q-rest-customer"/>
    </javac2>
    
    <copy todir="${q-rest-customer.output.dir}">
      <fileset dir="${module.q-rest-customer.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.q-rest-customer.tests" depends="register.custom.compilers,compile.module.q-rest-customer.production" description="compile module q-rest-customer; test classes" unless="skip.tests"/>
  
  <target name="clean.module.q-rest-customer" description="cleanup module">
    <delete dir="${q-rest-customer.output.dir}"/>
    <delete dir="${q-rest-customer.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.q-rest-customer" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.q-rest-customer" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.q-rest-customer" value="${basedir}/out/artifacts/q_rest_customer"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.q-rest-customer.war" value="${artifacts.temp.dir}/q-rest-customer.war"/>
  </target>
  
  <target name="artifact.q-rest-customer" depends="init.artifacts, compile.module.q-rest-customer" description="Build &#39;q-rest-customer&#39; artifact">
    <property name="artifact.temp.output.q-rest-customer" value="${artifacts.temp.dir}/q_rest_customer"/>
    <mkdir dir="${artifact.temp.output.q-rest-customer}"/>
    <zip destfile="${temp.jar.path.q-rest-customer.war}">
      <zipfileset dir="${basedir}/web"/>
      <zipfileset file="${basedir}/web/WEB-INF/web.xml" prefix="WEB-INF"/>
      <zipfileset dir="${q-rest-customer.output.dir}" prefix="WEB-INF/classes"/>
      <zipfileset file="${basedir}/web/WEB-INF/lib/jackson-annotations-2.8.5.jar" prefix="WEB-INF/lib"/>
    </zip>
    <copy file="${temp.jar.path.q-rest-customer.war}" tofile="${artifact.temp.output.q-rest-customer}/q-rest-customer.war"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.q-rest-customer" description="Build all artifacts">
    <mkdir dir="${artifact.output.q-rest-customer}"/>
    <copy todir="${artifact.output.q-rest-customer}">
      <fileset dir="${artifact.temp.output.q-rest-customer}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>